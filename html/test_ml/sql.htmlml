<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coucou</title>
  <style>
  table, th, td {
    border:1px solid black;
  }
  </style>
</head>
<body>
  
  <h1>SQLite</h1>
  <p>
    <{
      let db = Sqlite.opendb "test.db"
    }>
    <h2>Table Test</h2>
    <{
      Sqlite.exec db (fun acc -> fun new_line -> <[ <{acc}> <{new_line}> ]>) (fun acc -> fun hd -> fun content -> <[ <{ acc }> <{ if hd <> "id" then begin <[ <{hd}>: <{content}> <br/> ]> end else <[]> }> ]>) "SELECT * FROM Test"
    }>
    <h2>Table Livre</h2>
    <h3>Minimal display</h3>
    <{
      Sqlite.exec db (fun acc -> fun new_line -> <[ <{acc}> <{new_line}> ]>) (fun acc -> fun hd -> fun content -> <[ <{ acc }> <{ if hd <> "id" then begin <[ <{hd}>: <{content}> <br/> ]> end else <[]> }> ]>) "SELECT * FROM Livre"
    }>
    <h3>As a HTML table</h3>
    <table>
    <{
      Sqlite.exec db
        (fun acc -> fun new_line -> <[ <tr> <{new_line}> </tr> ]>)
        begin fun acc -> fun hd -> fun content ->
          <[
            <{ acc }>
            <th> <{ hd }> </th>
          ]>
        end "SELECT * FROM Livre"
    }>
    <{
      Sqlite.exec db
        (fun acc -> fun new_line -> <[ <{acc}> <tr> <{new_line}> </tr> ]>)
        begin fun acc -> fun hd -> fun content ->
          <[
            <{ acc }>
            <td> <{content}> </td>
          ]>
        end "SELECT * FROM Livre"
    }>
    </table>
    <{
      Sqlite.closedb db;""
    }>
  </p>
</body>
</html>